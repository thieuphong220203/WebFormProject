@model List<FinalSeWeb.Models.MOBILE_PRODUCT>
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Header-->

<header class="bg-light py-1">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-bg-light">
            <h1 class="display-4 fw-bolder">Phone Store</h1>
            <p style="color: #000;" class="lead fw-normal mb-0">DP Co.</p>
        </div>
    </div>
</header>


<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            @foreach (var product in Model)
            {
                <div class="col mb-5 p-4 product__content">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top p-4" src="~/assets/img/@product.Image_Product" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@product.Product_Name</h5>
                                <!-- Product price-->
                                @product.Price <br />
                                Quantity: @product.Product_Quantities
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="~/Describe/Describe?pID=@product.Product_ID">View options</a></div>
                        </div>
                    </div>
                </div>
              }


            
        </div>
    </div>
</section>

